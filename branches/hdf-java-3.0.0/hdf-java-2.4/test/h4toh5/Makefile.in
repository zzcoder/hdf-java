JAVAC=@JAVAC@
RM=@RM@

CLASSPATH=@CLASSPATH@   

.SUFFIXES: .java .class

.java.class:
	$(JAVAC) -classpath $(CLASSPATH) $<

all: apitest imagetest imagetestattr sdstest sdstestattr vdatatest vgrouptest nametest lonesdstest lonevdatatest loneimagetest runtests
	chmod u+x runtests.sh

apitest: apitest.class
	chmod u+x apitest.sh

imagetest: imagetest.class
	chmod u+x imagetest.sh

imagetestattr: imagetestattr.class
	chmod u+x imagetestattr.sh

sdstest: sdstest.class
	chmod u+x sdstest.sh

sdstestattr: sdstestattr.class
	chmod u+x sdstestattr.sh

vdatatest: vdatatest.class
	chmod u+x vdatatest.sh

vgrouptest: vgrouptest.class
	chmod u+x vgrouptest.sh

nametest: nametest.class
	chmod u+x nametest.sh

lonesdstest: lonesdstest.class
	chmod u+x lonesdstest.sh

lonevdatatest: lonevdatatest.class
	chmod u+x lonevdatatest.sh

loneimagetest: loneimagetest.class
	chmod u+x loneimagetest.sh

runtests: 
	chmod u+x runtests.sh

check: all
	runtests.sh

clean:
	$(RM) -f *.class
	$(RM) -f *.hdf
	$(RM) -f *.h5

linktest: linktest1.class linktest2.class linktest3.class linktest4.class linktest5.class
	chmod u+x linktest.sh

