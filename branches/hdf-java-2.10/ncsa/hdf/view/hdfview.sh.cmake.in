#!/bin/sh

# Set up default variable values if not supplied by the user.

# Adjust the following two variables to match your environment
export JAVABIN= # bin folder of installed java if not found below
export INSTALLDIR=@CMAKE_INSTALL_PREFIX@

if [ ! -d \$JAVABIN ]; then
    JAVALOC=`which java`
    LASTSLASH=`perl -e "print rindex(\"${JAVALOC}\", '/')"`
    JAVABIN=`perl -e "print substr(\"${JAVALOC}\", 0, $LASTSLASH)"`
fi

$JAVABIN/java -Xmx1024M -Djava.library.path="$INSTALLDIR/lib:$INSTALLDIR/lib/ext" -Dhdfview.root="$INSTALLDIR" -jar "$INSTALLDIR/@HJAVA_INSTALL_JAR_DIR@/@HDFVIEW_JAR@" -root "$INSTALLDIR/share" $*

# alternate invocation when using modules
#$JAVABIN/java -Xmx1024M -Djava.library.path="$INSTALLDIR/lib:$INSTALLDIR/lib/ext" -Dhdfview.root="$INSTALLDIR" -cp "$INSTALLDIR/@HJAVA_INSTALL_JAR_DIR@/@HDFVIEW_JAR@" ncsa.hdf.view.HDFView -root "$INSTALLDIR/share" $*
