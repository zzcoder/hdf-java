CC = @CC@ @COPT@

HDF5INC = @HDF5INC@
HDF5LIB = @HDF5LIB@
HDF4INC = @HDF4INC@
HDF4LIB = @HDF4LIB@
H45INC = @H45INC@
H45LIB = @H45LIB@

JAVAINC1=@JAVAINC@
JAVAINC2=@JAVAINC2@

LIBDIR=../../lib/@JAVATARG@

# Flags passed to the C compiler.  Leave these alone.

LD=@LD@
LDOPT=@LDOPT@
LLEXT=@LLEXT@
SLEXT=@SLEXT@
JSLEXT=@JSLEXT@

COPT=@COPT@

CFLAGS = $(DEFS) -I. -I$(HDF4INC) -I$(HDF5INC) -I$(H45INC) -I$(JAVAINC1) -I$(JAVAINC2)

HDFL=$(HDF4LIB)/libdf.$(LLEXT) $(HDF4LIB)/libjpeg.$(LLEXT) $(HDF4LIB)/libmfhdf.$(LLEXT) $(HDF4LIB)/libz.$(LLEXT)

LIBS =  $(H45LIB)/libh4toh5.$(LLEXT) $(HDF5LIB)/libhdf5.$(LLEXT) $(HDFL) -lm

H4OBJECTS =  ../hdflib/hdfstructsutil.o \
	../hdflib/hdfImp.o \
	../hdflib/hdfvgroupImp.o \
	../hdflib/hdfvdataImp.o \
	../hdflib/hdfsdsImp.o \
	../hdflib/hdfanImp.o \
	../hdflib/hdfdfanImp.o \
	../hdflib/hdfdfsdImp.o \
	../hdflib/hdfr24Imp.o \
	../hdflib/hdfdfpalImp.o \
	../hdflib/hdfr8Imp.o \
	../hdflib/hdfgrImp.o \
	../hdflib/hdfheImp.o \
	../hdflib/hdfdfuImp.o \
	../hdflib/hdfhxImp.o \
	../hdflib/hdfvfImp.o \
	../hdflib/hdfvhImp.o \
	../hdflib/hdfvqImp.o \
	../hdflib/hdfvsqImp.o \
	../hdflib/hdfexceptionImp.o \
	../hdflib/hdfdfcompImp.o \
	../hdflib/hdfnativeImp.o 

H5OBJECTS =  ../hdf5lib/exceptionImp.o \
	../hdf5lib/h5Constants.o \
	../hdf5lib/h5Imp.o \
	../hdf5lib/h5aImp.o \
	../hdf5lib/h5dImp.o \
	../hdf5lib/h5fImp.o \
	../hdf5lib/h5gImp.o \
	../hdf5lib/h5iImp.o \
	../hdf5lib/h5pImp.o \
	../hdf5lib/h5rImp.o \
	../hdf5lib/h5sImp.o \
	../hdf5lib/h5tImp.o \
	../hdf5lib/nativeData.o \
	../hdf5lib/H5Git.o

H45OBJECTS =  h45exceptionImp.o h4toh5Imp.o 

OBJECTS =  $(H45OBJECTS) $(H5OBJECTS) $(H4OBJECTS)

all:  
	@if test -n "$(H45INC)" ; then $(MAKE) libjh4toh5; fi
	

h4toh5lib: libjh4toh5

libjh4toh5: $(OBJECTS)
	-mkdir -p $(LIBDIR);
	$(LD) $(LDOPT) -o $(LIBDIR)/libjh4toh5.$(JSLEXT) $(LDOPT2) $(OBJECTS) $(LIBS)

clean:
	rm -f *.o so_locations $(LIBDIR)/libjh4toh5.$(JSLEXT)

