	cd hdflib; \
	$(MAKE) clean ; 

clean-hdf5lib:
	cd hdf5lib; \
	$(MAKE) clean ; 

clean-h4toh5lib:
	cd h4toh5lib; \
	$(MAKE) clean ; 

