H45INC=
H4INC=/usr/local/bin/hdf4/include
H5INC=/usr/local/bin/hdf5.1.8/include

all: hdflib hdf5lib

hdflib: FORCE
	@if test -n "$(H4INC)" ; then $(MAKE) do-hdflib ; fi

do-hdflib: 
	cd hdflib; \
	$(MAKE) ; 

hdf5lib: FORCE
	@if test -n "$(H5INC)" ; then $(MAKE) do-hdf5lib ; fi

do-hdf5lib: 
	cd hdf5lib; \
	$(MAKE) ; 

clean: clean-hdflib clean-hdf5lib 

clean-hdflib:
	cd hdflib; \
	$(MAKE) clean ; 

clean-hdf5lib:
	cd hdf5lib; \
	$(MAKE) clean ; 

FORCE:
