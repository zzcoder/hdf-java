#-----------------------------------------------------------------------------
# HDFJAVA Config file for compiling against HDFJAVA install directory
#-----------------------------------------------------------------------------
GET_FILENAME_COMPONENT (SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------------
# User Options
#-----------------------------------------------------------------------------
SET (HDFJAVA_ENABLE_PARALLEL @HDFJAVA_ENABLE_PARALLEL@)
SET (BUILD_SHARED_LIBS    @BUILD_SHARED_LIBS@)
SET (HDFJAVA_ENABLE_JPEG_LIB_SUPPORT @HDFJAVA5_ENABLE_JPEG_LIB_SUPPORT@)
SET (HDFJAVA_ENABLE_Z_LIB_SUPPORT @HDFJAVA_ENABLE_Z_LIB_SUPPORT@)
SET (HDFJAVA_ENABLE_SZIP_SUPPORT  @HDFJAVA_ENABLE_SZIP_SUPPORT@)
SET (HDFJAVA_ENABLE_SZIP_ENCODING @HDFJAVA_ENABLE_SZIP_ENCODING@)

#-----------------------------------------------------------------------------
# Directories
#-----------------------------------------------------------------------------
SET (HDFJAVA_INCLUDE_DIRS "@CMAKE_INSTALL_PREFIX@")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
SET (HDFJAVA_VERSION_STRING @HDFJAVA_VERSION_STRING@)
SET (HDFJAVA_VERSION_MAJOR  @HDFJAVA_VERSION_MAJOR@)
SET (HDFJAVA_VERSION_MINOR  @HDFJAVA_VERSION_MINOR@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already build HDFJAVA as a subproject
#-----------------------------------------------------------------------------
IF (NOT TARGET "HDFJAVA")
  INCLUDE (${SELF_DIR}/HDFJAVA-targets.cmake)
ENDIF (NOT TARGET "HDFJAVA")
