JAVAC        = @JAVAC@
RM           = @RM@

CLASSPATH=@CLASSPATH@:../../lib/junit.jar

.SUFFIXES: .java .class

.java.class:
	$(JAVAC) -classpath $(CLASSPATH) $<

all:	TestFile.class \
	ToolsTest.class \
	AllHDFViewTests.class

check: all
	chmod u+x unittests.sh; ./viewtest.sh

clean:
	$(RM) *.class
	$(RM) -f *.hdf
	$(RM) -f *.h5

